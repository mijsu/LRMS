# Copy this file to .env and fill the values before running `npm run dev`
# Do NOT commit your real .env to version control

# Firebase configuration (for production / real project)
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Optional: use local Firestore emulator for development
# Set USE_FIREBASE_EMULATOR=true and optionally FIRESTORE_EMULATOR_HOST/PORT
USE_FIREBASE_EMULATOR=false
FIRESTORE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080

# Server
PORT=5000
NODE_ENV=development
